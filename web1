<script>

   var wp=document.getElementById("w");
   function checkn(elem) {

    if (isNaN(elem.value) ) {
        document.getElementById("w").style.color="red";
        document.getElementById("w").innerText="enter numbers only";
    }
    else{
        document.getElementById("w").innerText="";
        if (elem.value.length >11) {
            document.getElementById("w").innerText="numbers cant acceed 10 ";
        }
        else{
            document.getElementById("w").innerText="";
        }
    }
 }
